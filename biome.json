{
  "$schema": "https://biomejs.dev/schemas/2.3.12/schema.json",
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": { "recommended": true }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "css": {
    "parser": {
      "cssModules": true,
      "tailwindDirectives": true
    },
    "linter": {
      "enabled": false
    },
    "formatter": {
      "enabled": false
    }
  },
  "files": {
    "includes": [
      "**",
      "!**/node_modules",
      "!**/dist",
      "!**/.vinxi",
      "!**/.output",
      "!**/.wrangler",
      "!**/convex/_generated",
      "!**/.claude",
      "!**/app/routeTree.gen.ts",
      "!**/*.timestamp_*.js",
      "!**/playwright-report",
      "!**/.tanstack"
    ]
  }
}
