{
  "name": "the-dahan-codex",
  "private": true,
  "version": "1.0.0",
  "description": "Spirit Island companion app",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && pnpm generate-sw",
    "generate-sw": "tsx scripts/generate-sw.ts",
    "preview": "wrangler dev --config dist/server/wrangler.json",
    "deploy": "pnpm build && wrangler deploy --config dist/server/wrangler.json",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "ci": "pnpm lint && pnpm typecheck && pnpm build && test -f dist/client/sw.js && pnpm test:e2e"
  },
  "dependencies": {
    "@clerk/tanstack-start": "^0.11.5",
    "@convex-dev/react-query": "^0.1.0",
    "@tanstack/react-query": "^5",
    "@tanstack/react-router": "1.140.5",
    "@tanstack/react-start": "1.140.5",
    "convex": "^1.31.6",
    "react": "^19",
    "react-dom": "^19",
    "workbox-core": "^7.4.0",
    "workbox-expiration": "^7.4.0",
    "workbox-precaching": "^7.4.0",
    "workbox-routing": "^7.4.0",
    "workbox-strategies": "^7.4.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9",
    "@cloudflare/vite-plugin": "^1.21.2",
    "@playwright/test": "^1.58.0",
    "@types/node": "^25.0.10",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "lefthook": "^1",
    "tsx": "^4.21.0",
    "typescript": "^5.7",
    "vite": "^7",
    "vite-tsconfig-paths": "^5",
    "workbox-build": "^7.4.0",
    "wrangler": "^4.60.0"
  }
}
