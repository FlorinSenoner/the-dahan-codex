{
  "name": "the-dahan-codex",
  "private": true,
  "version": "1.0.0",
  "description": "Spirit Island companion app",
  "type": "module",
  "pnpm": {
    "onlyBuiltDependencies": [
      "lefthook"
    ]
  },
  "scripts": {
    "dev": "vite",
    "generate:public-routes": "node scripts/generate-public-routes.mjs",
    "prerender:public": "node scripts/prerender-public-routes.mjs",
    "build": "vite build",
    "build:public": "pnpm generate:public-routes && pnpm build && pnpm prerender:public",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "typecheck:convex": "convex typecheck",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write . && prettier --write \"**/*.{md,mdx,yml,yaml}\"",
    "format:check": "biome format . && prettier --check \"**/*.{md,mdx,yml,yaml}\"",
    "knip": "knip",
    "jscpd": "jscpd .",
    "test": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "check": "biome check . && prettier --check \"**/*.{md,mdx,yml,yaml}\" && pnpm typecheck && pnpm typecheck:convex && pnpm knip && pnpm jscpd",
    "ci": "pnpm check && pnpm build && pnpm test:e2e",
    "prepare": "lefthook install"
  },
  "dependencies": {
    "@clerk/clerk-react": "^5.60.0",
    "@convex-dev/react-query": "^0.1.0",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@tanstack/query-persist-client-core": "^5.91.19",
    "@tanstack/react-query": "^5.90.20",
    "@tanstack/react-router": "^1.159.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "convex": "^1.31.7",
    "date-fns": "^4.1.0",
    "idb-keyval": "^6.2.2",
    "lucide-react": "^0.563.0",
    "papaparse": "^5.5.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-intersection-observer": "^10.0.2",
    "recharts": "^3.7.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "vaul": "^1.1.2",
    "workbox-expiration": "^7.4.0",
    "workbox-precaching": "^7.4.0",
    "workbox-routing": "^7.4.0",
    "workbox-strategies": "^7.4.0",
    "workbox-window": "^7.4.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/router-plugin": "^1.159.5",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@playwright/test": "^1.58.2",
    "@types/node": "^25.2.2",
    "@types/papaparse": "^5.5.2",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.3",
    "cheerio": "^1.2.0",
    "jscpd": "^4.0.8",
    "knip": "^5.83.1",
    "lefthook": "^2.1.0",
    "prettier": "^3.8.1",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-pwa": "^1.2.0",
    "vite-tsconfig-paths": "^6.1.0",
    "vitest": "^4.0.18"
  }
}
