{
  "name": "the-dahan-codex",
  "private": true,
  "version": "1.0.0",
  "description": "Spirit Island companion app",
  "type": "module",
  "pnpm": {
    "onlyBuiltDependencies": [
      "lefthook"
    ]
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build && pnpm generate-sw",
    "generate-sw": "tsx scripts/generate-sw.ts",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write . && prettier --write \"**/*.{md,mdx,yml,yaml}\"",
    "format:check": "biome format . && prettier --check \"**/*.{md,mdx,yml,yaml}\"",
    "knip": "knip",
    "knip:fix": "knip --fix",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "ci": "pnpm lint && pnpm typecheck && pnpm build && test -f dist/sw.js && pnpm test:e2e"
  },
  "dependencies": {
    "@clerk/clerk-react": "^5.33.2",
    "@convex-dev/react-query": "^0.1.0",
    "@radix-ui/react-slot": "^1.2.4",
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/react-query": "^5.90.20",
    "@tanstack/react-router": "^1.157.9",
    "@tanstack/router-plugin": "^1.157.9",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "convex": "^1.31.6",
    "lucide-react": "^0.563.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "vaul": "^1.1.2",
    "workbox-core": "^7.4.0",
    "workbox-expiration": "^7.4.0",
    "workbox-precaching": "^7.4.0",
    "workbox-routing": "^7.4.0",
    "workbox-strategies": "^7.4.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.12",
    "@playwright/test": "^1.58.0",
    "@types/node": "^25.0.10",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "cheerio": "^1.2.0",
    "knip": "^5.82.1",
    "lefthook": "^2.0.15",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-tsconfig-paths": "^6.0.5",
    "workbox-build": "^7.4.0"
  }
}
