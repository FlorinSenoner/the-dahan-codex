{
  "$schema": "https://json.schemastore.org/jscpd.json",
  "threshold": 2,
  "reporters": ["consoleFull"],
  "ignore": [
    "**/node_modules/**",
    "**/dist/**",
    "**/convex/_generated/**",
    "**/*.d.ts",
    "**/pnpm-lock.yaml",
    "**/playwright-report/**",
    "**/.planning/**",
    "**/e2e/**",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/tests/**"
  ],
  "format": ["typescript", "tsx"],
  "gitignore": true,
  "minLines": 5,
  "minTokens": 50
}
